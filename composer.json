{
    "name": "mzati/paychangusdk",
    "description": "Laravel SDK for integrating Paychangu payment gateway",
    "keywords": [
        "mzati",
        "laravel",
        "paychangu",
        "payment",
        "gateway",
        "sdk"
    ],
    
    "homepage": "https://github.com/Mzati1/PaychanguLaravelSDK",
    "license": "MIT",
    "authors": [
        {
            "name": "Mzati Tembo",
            "email": "mzatitembo01@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^9.0|^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.8",
        "monolog/monolog": "^3.0",
        "ext-json": "*",
        "ramsey/uuid": "^4.0",
        "symfony/http-foundation": "^6.0|^7.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^7.0|^8.0",
        "larastan/larastan": "^2.0|^3.0",
        "orchestra/testbench": "^8.0|^9.0",
        "pestphp/pest": "^2.0|^3.0",
        "pestphp/pest-plugin-arch": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "spatie/laravel-ray": "^1.35",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Mzati\\PaychanguSDK\\": "src/",
            "Mzati\\PaychanguSDK\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mzati\\PaychanguSDK\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mzati\\PaychanguSDK\\PaychanguServiceProvider"
            ],
            "aliases": {
                "Paychangu": "Mzati\\PaychanguSDK\\Facades\\Paychangu"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
